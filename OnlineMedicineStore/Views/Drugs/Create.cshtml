@model OnlineMedicineStore.ViewModel.DrugsCreateViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>ADD DRUGS</h2>
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-controller="Drugs" asp-action="Create" method="post" class="mt-3">
            <div asp-validation-summary="All">
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Photopath" class="col-sm-2 col-form-label"></label>
                        <div class="custom-file">
                            <input asp-for="Photopath" class="form-control custom-file-input">
                            <label class="custom-file-label">Choose File...</label>
                        </div>
                </div>
            </div>
            <div class="form-group row">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
            @section Scripts {
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                    });
                </script>
                }
            </form>
    </div>
</div>


