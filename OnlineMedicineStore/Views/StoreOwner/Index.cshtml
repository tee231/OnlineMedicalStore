@model IEnumerable<OnlineMedicineStore.Models.ApplicationUser>

@{
    ViewData["Title"] = "Index";
}

<h2>Store Owners</h2>
<hr/>

<p>
   
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
               FirstName
            </th>
            <th>
               LastName
            </th>
            <th>
               Email
            <th>
                PhoneNumber
            </th>
            <th>
               DateOfBirth
            </th>
           
            <th>   @*<a asp-action="AddorEdit" class="btn btn-outline-success"><i class="far fa-plus-square">Store Owner</a>*@
        <a asp-area="" asp-controller="Identity" asp-action="Register">Register</a></th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
           
            <td>
                <a asp-controller="StoreOwner" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-marker fa-lg"></i></a> |
                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger" ml-1><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
