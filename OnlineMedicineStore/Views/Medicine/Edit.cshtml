<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>


<h2>Edit</h2>
<div class="container">
    <div class="row">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h3 class="modal-title">Update</h3>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <form enctype="multipart/form-data" asp-action="Edit" asp-controller="Medicine">
                            <input type="hidden" @*asp-for="Id"*@ />
                            @*<div class="form-group">
                                <label asp-for="Photo" class="control-label"></label>
                                    <input asp-for="Photo" class="form-control ">
                                    <label class="custom-file-label">Choose File...</label>
                                
                                </div>*@
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Address" class="control-label"></label>
                                    <input asp-for="Address" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label asp-for="Description" class="control-label"></label>
                                    <textarea asp-for="Description" class="form-control"></textarea>
                                </div>
                        </form>
                    </div>
                </div>

                <div class="modal-footer">
                    <a class="btn btn-default" data-dismiss="modal">Cancel</a>
                    <a class="btn btn-success" onclick="Update()">Save</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function Update() {
        var id = $("#Id").val();
        var name = $("#Name").val();
        var address = $("#Address").val();
        var des = $("#Description").val();
        var Photo = $("Photo").val();

        var update = { "id": id, "name": name, "address": address, "description": des, "Photo": Photo }
       
        $.post('/Medicine/Edit', update,

            function (data) {
            if(data == 0) { location: '/Medicine/Store' }
        });
        alert("Updated successfully");
        window.location.reload();
    }
</script>